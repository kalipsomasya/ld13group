// 251RDC017 Jana Kuranova 16
// 251RDC054 Aļona Strahova 16
// 251RDC019 Marija Mičule 16


import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.ByteArrayOutputStream;
import java.io.Closeable;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;

import java.util.Arrays;
import java.util.PriorityQueue;
import java.util.Scanner;

public class Main {

    // archive magic
    private static final byte[] MAGIC = new byte[] { 'L', 'Z', 'H', 'F' };

    // LZ77 params tuned for text (HTML)
    private static final int WINDOW_SIZE = 4096;
    private static final int LOOKAHEAD_SIZE = 64;
    private static final int MIN_MATCH = 3;

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String choiceStr;
        String sourceFile, resultFile, firstFile, secondFile;

        loop: while (true) {
            System.out.print("> ");
            if (!sc.hasNextLine()) break;
            choiceStr = sc.nextLine().trim();

            switch (choiceStr) {
                case "comp":
                    System.out.print("source file name: ");
                    sourceFile = sc.nextLine().trim();
                    System.out.print("archive name: ");
                    resultFile = sc.nextLine().trim();
                    comp(sourceFile, resultFile);
                    break;
                case "decomp":
                    System.out.print("archive name: ");
                    sourceFile = sc.nextLine().trim();
                    System.out.print("file name: ");
                    resultFile = sc.nextLine().trim();
                    decomp(sourceFile, resultFile);
                    break;
                case "size":
                    System.out.print("file name: ");
                    sourceFile = sc.nextLine().trim();
                    size(sourceFile);
                    break;
                case "equal":
                    System.out.print("first file name: ");
                    firstFile = sc.nextLine().trim();
                    System.out.print("second file name: ");
                    secondFile = sc.nextLine().trim();
                    System.out.println(equal(firstFile, secondFile));
                    break;
                case "about":
                    about();
                    break;
                case "ratio":
                    System.out.print("original file name: ");
                    firstFile = sc.nextLine().trim();
                    System.out.print("archive file name: ");
                    secondFile = sc.nextLine().trim();
                    ratio(firstFile, secondFile);
                    break;
                case "exit":
                    break loop;
                default:
                    if (!choiceStr.isEmpty())
                        System.out.println("Unknown command. Allowed: comp, decomp, size, equal, about, ratio, exit");
            }
        }

        sc.close();
    }

    // ----------------- COMPRESS -----------------
    public static void comp(String sourceFile, String resultFile) {
        try {
            File inFile = new File(sourceFile);
            if (!inFile.exists() || !inFile.isFile()) {
                System.out.println("Source file not found: " + sourceFile);
                return;
            }

            // read original bytes
            byte[] original = readAllBytes(inFile);
            long originalLength = original.length;

            // text preprocessing (improves compression for HTML/text)
            // Note: preprocessing changes content (removes comments and collapses whitespace).
            // If exact byte-for-byte roundtrip is required, remove this step.
            byte[] preprocessed = preprocessTextForCompression(original);

            // LZ77 encode => sequence of 4-byte records: [off_hi][off_lo][len][next]
            byte[] lzBytes = LZ77.encode(preprocessed, WINDOW_SIZE, LOOKAHEAD_SIZE, MIN_MATCH);

            // Build frequency table over lzBytes
            long[] freq = new long[256];
            for (byte b : lzBytes) freq[b & 0xFF]++;

            // build Huffman tree & codes
            Node root = buildHuffmanTree(freq);
            String[] codes = new String[256];
            if (root != null) buildCodes(root, "", codes);

            // Write archive:
            // MAGIC (4) | originalLength(long) | preprocessedLength(int) | lzBytesLength(int) | freq[256]*long | bitstream
            try (FileOutputStream fos = new FileOutputStream(resultFile);
                 BufferedOutputStream bos = new BufferedOutputStream(fos);
                 DataOutputStream dos = new DataOutputStream(bos)) {

                dos.write(MAGIC);
                dos.writeLong(originalLength); // original length for reference
                dos.writeInt(preprocessed.length); // length after preprocessing
                dos.writeInt(lzBytes.length); // number of LZ output bytes
                for (int i = 0; i < 256; i++) dos.writeLong(freq[i]);
                dos.flush();

                BitOutputStream bitOut = new BitOutputStream(bos);
                for (byte b : lzBytes) {
                    String code = codes[b & 0xFF];
                    if (code == null || code.length() == 0) code = "0";
                    for (char c : code.toCharArray()) {
                        bitOut.writeBit(c == '1' ? 1 : 0);
                    }
                }
                bitOut.close();
            }

            long compressedLength = new File(resultFile).length();
            double ratio = (double) originalLength / compressedLength;
            System.out.printf("Compression finished. Ratio: %.2f%n", ratio);

        } catch (IOException ex) {
            System.out.println("Error during compression: " + ex.getMessage());
        }
    }

    // ----------------- DECOMPRESS -----------------
    public static void decomp(String sourceFile, String resultFile) {
        try {
            File inFile = new File(sourceFile);
            if (!inFile.exists() || !inFile.isFile()) {
                System.out.println("Archive file not found: " + sourceFile);
                return;
            }

            try (FileInputStream fis = new FileInputStream(inFile);
                 BufferedInputStream bis = new BufferedInputStream(fis);
                 DataInputStream dis = new DataInputStream(bis)) {

                byte[] magicRead = new byte[4];
                dis.readFully(magicRead);
                if (!Arrays.equals(magicRead, MAGIC)) {
                    System.out.println("Not a valid archive (magic mismatch).");
                    return;
                }

                long originalLength = dis.readLong();
                int preprocessedLength = dis.readInt();
                int lzLength = dis.readInt();
                long[] freq = new long[256];
                for (int i = 0; i < 256; i++) freq[i] = dis.readLong();

                Node root = buildHuffmanTree(freq);

                byte[] lzBytes = new byte[lzLength];
                if (lzLength > 0) {
                    BitInputStream bitIn = new BitInputStream(bis);
                    int produced = 0;
                    if (root == null) {
                        // no symbols
                    } else if (root.isLeaf()) {
                        byte sym = (byte) root.symbol;
                        for (int i = 0; i < lzLength; i++) lzBytes[i] = sym;
                    } else {
                        Node node = root;
                        while (produced < lzLength) {
                            int bit = bitIn.readBit();
                            if (bit == -1) break;
                            node = (bit == 0) ? node.left : node.right;
                            if (node.isLeaf()) {
                                lzBytes[produced++] = (byte) node.symbol;
                                node = root;
                            }
                        }
                    }
                }

                // decode LZ77 to preprocessed bytes
                byte[] preprocessed = LZ77.decode(lzBytes, preprocessedLength);

                // write preprocessed bytes to output file
                try (FileOutputStream fos = new FileOutputStream(resultFile);
                     BufferedOutputStream bos = new BufferedOutputStream(fos)) {
                    bos.write(preprocessed);
                    bos.flush();
                }
            }

            System.out.println("Decompression finished.");
        } catch (IOException ex) {
            System.out.println("Error during decompression: " + ex.getMessage());
        }
    }

    // ----------------- FILE UTIL -----------------
    public static void size(String sourceFile) {
        try {
            File f = new File(sourceFile);
            if (!f.exists() || !f.isFile()) {
                System.out.println("file not found");
                return;
            }
            System.out.println("size: " + f.length());
        } catch (Exception ex) {
            System.out.println(ex.getMessage());
        }
    }

    public static boolean equal(String firstFile, String secondFile) {
        try (FileInputStream f1 = new FileInputStream(firstFile);
             FileInputStream f2 = new FileInputStream(secondFile)) {

            int k1, k2;
            byte[] buf1 = new byte[4096];
            byte[] buf2 = new byte[4096];
            do {
                k1 = f1.read(buf1);
                k2 = f2.read(buf2);
                if (k1 != k2) return false;
                if (k1 > 0) {
                    for (int i = 0; i < k1; i++) {
                        if (buf1[i] != buf2[i]) return false;
                    }
                }
            } while (k1 != -1 && k2 != -1);
            return true;
        } catch (IOException ex) {
            System.out.println(ex.getMessage());
            return false;
        }
    }

    public static void about() {
        System.out.println("251RDC017 Jana Kuranova 16");
        System.out.println("251RDC054 Aļona Strahov 16");
        System.out.println("251RDC019 Marija Mičule 16");
    }

    // ----------------- RATIO COMMAND -----------------
    public static void ratio(String originalFile, String compressedFile) {
        try {
            File f1 = new File(originalFile);
            File f2 = new File(compressedFile);

            if (!f1.exists() || !f1.isFile()) {
                System.out.println("Original file not found");
                return;
            }
            if (!f2.exists() || !f2.isFile()) {
                System.out.println("Compressed file not found");
                return;
            }

            long sizeOriginal = f1.length();
            long sizeCompressed = f2.length();

            if (sizeCompressed == 0) {
                System.out.println("Compressed file is empty (ratio undefined)");
                return;
            }

            double ratio = (double) sizeOriginal / sizeCompressed;
            System.out.printf("ratio: %.2f%n", ratio);

        } catch (Exception e) {
            System.out.println("Error calculating ratio: " + e.getMessage());
        }
    }

    // ----------------- PREPROCESS (text) -----------------
    private static byte[] preprocessTextForCompression(byte[] input) {
        String s;
        try {
            s = new String(input, "UTF-8");
        } catch (Exception e) {
            s = new String(input);
        }
        // remove HTML comments <!-- ... -->
        s = s.replaceAll("(?s)<!--.*?-->", "");
        // collapse sequences of whitespace into a single space
        s = s.replaceAll("\\s+", " ");
        s = s.trim();
        try {
            return s.getBytes("UTF-8");
        } catch (Exception e) {
            return s.getBytes();
        }
    }

    // ----------------- HUFFMAN -----------------
    private static class Node implements Comparable<Node> {
        final long freq;
        final int symbol; // 0..255 for leaves, -1 for internal
        final Node left, right;

        Node(long freq, int symbol, Node left, Node right) {
            this.freq = freq;
            this.symbol = symbol;
            this.left = left;
            this.right = right;
        }

        boolean isLeaf() { return left == null && right == null; }

        @Override
        public int compareTo(Node o) {
            int cmp = Long.compare(this.freq, o.freq);
            if (cmp == 0) return Integer.compare(this.symbol, o.symbol);
            return cmp;
        }
    }

    private static Node buildHuffmanTree(long[] freq) {
        PriorityQueue<Node> pq = new PriorityQueue<>();
        for (int i = 0; i < 256; i++) if (freq[i] > 0) pq.add(new Node(freq[i], i, null, null));
        if (pq.isEmpty()) return null;
        if (pq.size() == 1) {
            Node only = pq.poll();
            return new Node(only.freq, -1, only, null);
        }
        while (pq.size() > 1) {
            Node a = pq.poll();
            Node b = pq.poll();
            Node parent = new Node(a.freq + b.freq, Math.min(a.symbol, b.symbol), a, b);
            pq.add(parent);
        }
        return pq.poll();
    }

    private static void buildCodes(Node node, String prefix, String[] codes) {
        if (node == null) return;
        if (node.isLeaf()) codes[node.symbol] = prefix.length() > 0 ? prefix : "0";
        else {
            buildCodes(node.left, prefix + "0", codes);
            buildCodes(node.right, prefix + "1", codes);
        }
    }

    // ----------------- LZ77 implementation -----------------
    private static class LZ77 {
        // encode: produces sequence of bytes: [off_hi][off_lo][len][next] repeated
        static byte[] encode(byte[] data, int windowSize, int lookaheadSize, int minMatch) throws IOException {
            ByteArrayOutputStream baos = new ByteArrayOutputStream();
            int pos = 0;
            while (pos < data.length) {
                int bestLen = 0;
                int bestDist = 0;
                int start = Math.max(0, pos - windowSize);
                int maxLen = Math.min(lookaheadSize, data.length - pos);
                for (int j = start; j < pos; j++) {
                    int k = 0;
                    // ensure we don't read past data
                    while (k < maxLen && (j + k) < pos && data[j + k] == data[pos + k]) k++;
                    // allow matching into lookahead (we compare j+k with pos+k but j+k < pos initially)
                    // after first iteration we can't compare beyond pos; simpler safe approach:
                    // compare while pos + k < data.length and data[j + k] == data[pos + k]
                    k = 0;
                    while (k < maxLen && (j + k) < data.length && (pos + k) < data.length && data[j + k] == data[pos + k]) k++;
                    if (k > bestLen) {
                        bestLen = k;
                        bestDist = pos - j;
                        if (bestLen == maxLen) break;
                    }
                }
                // Only accept matches if they are at least minMatch and there is a next byte to store
                if (bestLen >= minMatch && (pos + bestLen) < data.length) {
                    int nextIndex = pos + bestLen;
                    byte next = data[nextIndex];
                    // cap distance and length to storage limits
                    int dist = Math.min(bestDist, 0xFFFF);
                    int len = Math.min(bestLen, 0xFF);
                    baos.write((dist >> 8) & 0xFF);
                    baos.write(dist & 0xFF);
                    baos.write(len & 0xFF);
                    baos.write(next & 0xFF);
                    pos += bestLen + 1;
                } else {
                    // emit literal: offset=0,len=0,next=byte
                    baos.write(0);
                    baos.write(0);
                    baos.write(0);
                    baos.write(data[pos] & 0xFF);
                    pos += 1;
                }
            }
            return baos.toByteArray();
        }

        static byte[] decode(byte[] encoded, int expectedPreprocessedLength) throws IOException {
            ByteArrayOutputStream baos = new ByteArrayOutputStream();
            int i = 0;
            while (i + 3 < encoded.length) {
                int offset = ((encoded[i++] & 0xFF) << 8) | (encoded[i++] & 0xFF);
                int length = encoded[i++] & 0xFF;
                byte next = encoded[i++];
                if (offset == 0 && length == 0) {
                    // literal
                    baos.write(next & 0xFF);
                } else {
                    // match: copy 'length' bytes from distance 'offset' behind current end,
                    // allowing overlap by copying byte-by-byte from already written output.
                    int start = baos.size() - offset;
                    if (start < 0) {
                        // invalid offset (corrupt data) — fallback: skip copying and just write 'next'
                        baos.write(next & 0xFF);
                    } else {
                        for (int j = 0; j < length; j++) {
                            int idx = start + j;
                            // idx may grow beyond current baos.size() if match overlaps; so retrieve dynamically
                            byte[] buf = baos.toByteArray();
                            if (idx < 0 || idx >= buf.length) {
                                // overlapping: compute from latest bytes (shouldn't happen here if encoder correct)
                                // safe fallback: break copying
                                break;
                            }
                            baos.write(buf[idx] & 0xFF);
                        }
                        baos.write(next & 0xFF);
                    }
                }
                if (expectedPreprocessedLength > 0 && baos.size() >= expectedPreprocessedLength) break;
            }
            byte[] out = baos.toByteArray();
            if (expectedPreprocessedLength > 0 && out.length > expectedPreprocessedLength) {
                return Arrays.copyOf(out, expectedPreprocessedLength);
            }
            return out;
        }
    }

    // ----------------- BitStream helpers -----------------
    private static class BitOutputStream implements Closeable {
        private final OutputStream out;
        private int currentByte = 0;
        private int numBitsFilled = 0;
        BitOutputStream(OutputStream out) { this.out = out; }

        void writeBit(int b) throws IOException {
            currentByte = (currentByte << 1) | (b & 1);
            numBitsFilled++;
            if (numBitsFilled == 8) {
                out.write(currentByte);
                numBitsFilled = 0;
                currentByte = 0;
            }
        }

        public void close() throws IOException {
            if (numBitsFilled > 0) {
                out.write(currentByte << (8 - numBitsFilled));
            }
            out.flush();
        }
    }

    private static class BitInputStream implements Closeable {
        private final InputStream in;
        private int currentByte = 0;
        private int numBitsRemaining = 0;

        BitInputStream(InputStream in) { this.in = in; }

        int readBit() throws IOException {
            if (numBitsRemaining == 0) {
                currentByte = in.read();
                if (currentByte == -1) return -1;
                numBitsRemaining = 8;
            }
            numBitsRemaining--;
            return (currentByte >> numBitsRemaining) & 1;
        }

        public void close() throws IOException { in.close(); }
    }

    // ----------------- IO helper -----------------
    private static byte[] readAllBytes(File f) throws IOException {
        try (FileInputStream fis = new FileInputStream(f);
             ByteArrayOutputStream baos = new ByteArrayOutputStream()) {
            byte[] buf = new byte[8192];
            int r;
            while ((r = fis.read(buf)) != -1) baos.write(buf, 0, r);
            return baos.toByteArray();
        }
    }
}
